@model VehicleModel

<div class="text-center">
    <h1 class="display-4">Create a new vehicle</h1>
</div>

<form asp-controller="Vehicle" asp-action="Create" method="post">
    <div class="form-group">
        <label for="vehicleName" class="form-label">Name</label>
        <input type="text" asp-for="VehicleName" class="form-control" placeholder="Enter with vehicle's name">
        @Html.ValidationMessageFor(c => c.VehicleName)
    </div>
    <div class="form-group">
        <label for="vehicleColor" class="form-label">Color</label>
        <input type="text" asp-for="VehicleColor" class="form-control" placeholder="What's the color? ">
        @Html.ValidationMessageFor(c => c.VehicleColor)
    </div>
    <div class="form-group">
        <label for="vehicleYear" class="form-label">Year</label>
        <input type="text" asp-for="VehicleYear" class="form-control" placeholder="What's the year? ">
        @Html.ValidationMessageFor(c => c.VehicleYear)
    </div>

    <button type="submit" class="btn btn-primary">Add</button>
    <a class="btn btn-secondary" asp-controller="Vehicle" asp-action="Index" role="button">Voltar</a>
</form>
