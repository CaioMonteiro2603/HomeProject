@model VehicleModel

@{
    ViewData["Title"] = "Deleted";
}

<div class="text-center">
    <h3>Do you really want to delete this vehicle?(@Model.VehicleName)?</h3>
</div>

<a class="btn btn-primary" asp-action="Index" asp-controller="User" role="button">Forget this</a>
<a class="btn btn-danger" asp-action="Delete" asp-controller="User" asp-route-id="@Model.VehicleId" role="button">Confirm this</a>
