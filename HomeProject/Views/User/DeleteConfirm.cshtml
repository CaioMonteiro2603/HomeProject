@model UserModel

@{
    ViewData["Title"] = "DeleteConfirm";
}

<div class="text-center">
    <h3>Do you really want to delete this user?(@Model.UserName)?</h3>
</div>

<a class="btn btn-primary btn-block" asp-action="Index" asp-controller="User" role="button">Forget this</a>
<a class="btn btn-danger btn-block" asp-action="Delete" asp-controller="User" asp-route-id="@Model.UserId" role="button">Confirm this</a>
