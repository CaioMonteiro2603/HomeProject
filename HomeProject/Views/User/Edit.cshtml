@model UserModel

@{
    ViewData["Title"] = "Edit user"; 
}
<div class="text-center">
    <h1 class="display-4">Edit user</h1>
</div>

<form asp-controller="User" asp-action="Edit" method="post">
    <input type="hidden" asp-for="UserId" />
    <div class="form-group">
        <label for="UserName" class="form-label">Name</label>
        <input type="text" asp-for="UserName" class="form-control">
        @Html.ValidationMessageFor(c => c.UserName)
    </div>
    <div class="form-group">
        <label for="UserLastName" class="form-label">LastName</label>
        <input type="text" asp-for="UserLastName" class="form-control">
        @Html.ValidationMessageFor(c => c.UserLastName)
    </div>
    <div class="form-group">
        <label for="email" class="form-label">Email</label>
        <input type="text" asp-for="UserEmail" class="form-control">
        @Html.ValidationMessageFor(c => c.UserEmail)
    </div>
    <div class="form-group">
        <label for="login" class="form-label">login</label>
        <input type="text" asp-for="Login" class="form-control">
        @Html.ValidationMessageFor(c => c.Login)
    </div>

    <button type="submit" class="btn btn-primary">Edit</button>
    <a class="btn btn-secondary" asp-controller="User" asp-action="Index" role="button">Back</a>
</form>
